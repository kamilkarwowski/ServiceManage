<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServiceManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServiceManagement.styles.css" asp-append-version="true" />
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="color:#F3F3F3; box-shadow: 0px 5px 8px 0px rgba(0, 0, 0, 0.25);">
            <div class="container-fluid">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="padding:0; margin-left:30px;margin-right:40px">
                    <img src="~/logo.png" alt="logo" height="50px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if(User.IsInRole("Serwisant"))
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Strona główna
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Ogłoszenia</a>
                        </div>
                    </div>
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           Zadania
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="Index">Aktualne zadania</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="FinishedTask">Ukończone zadania</a>
                        </div>

                    </div>
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Czas pracy
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="WorkTimes" asp-action="Index">Twój czas pracy</a>
                            <a class="dropdown-item" asp-area="" asp-controller="WorkTimes" asp-action="Create">Dodaj czas pracy</a>
                        </div>

                    </div>
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           Dokumenty
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Document" asp-action="Index">Dokumenty</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Document" asp-action="Upload">Dodaj dokument</a>
                        </div>

                    </div>
                    
                    </div>
                  
                       
                        
                       
                  

                }
                @if(User.IsInRole("Admin"))
                {
                   
                            <div class="dropdown nav-item">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Strona główna
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Ogłoszenia</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Create">Dodaj ogłoszenie</a>
                                </div>
                            </div>
                            <div class="dropdown nav-item">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Użytkownicy
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index">Użytkownicy</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Create">Dodaj użytkownika</a>
                                </div>
                                </div>
                            <div class="dropdown nav-item">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Zadania
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="Index">Aktualne zadania</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="Create">Dodaj zadanie</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="FinishedTask">Zakończone zadania</a>
                                </div>

                            </div>
                            <div class="dropdown nav-item">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Czas pracy
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="WorkTimes" asp-action="Index">Czas pracy serwisantów</a>
                                </div>

                            </div>
                            <div class="dropdown nav-item">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Dokumenty
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="Document" asp-action="Index">Dokumenty</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Document" asp-action="Upload">Dodaj dokument</a>
                                </div>

                            </div>
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Rejony
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Area" asp-action="Index">Rejony</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Area" asp-action="Create">Dodaj rejon</a>
                        </div>

                    </div>
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Priorytety
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Status" asp-action="Index">Priorytety zadań</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Status" asp-action="Create">Dodaj priorytet</a>
                        </div>

                    </div>
                           
                        
                }



                @if (User.IsInRole("Kierownik"))
                {

                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Strona główna
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Ogłoszenia</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Create">Dodaj ogłoszenie</a>
                        </div>
                    </div>
                   
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Zadania
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="Index">Aktualne zadania</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="Create">Dodaj zadanie</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Zadanie" asp-action="FinishedTask">Zakończone zadania</a>
                        </div>

                    </div>
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Czas pracy
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="WorkTimes" asp-action="Index">Czas pracy serwisantów</a>
                        </div>

                    </div>
                    <div class="dropdown nav-item">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dokumenty
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-area="" asp-controller="Document" asp-action="Index">Dokumenty</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Document" asp-action="Upload">Dodaj dokument</a>
                        </div>

                    </div>
                    


                }
                <a class="btn" asp-controller="User" asp-action="Logout" id="dropItem" style="margin-right:40px"> Wyloguj się</a>

            </div>
        </nav>
        
    </header>
    <div class="container-fluid">
        <main role="main" >
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
